{
  "name": "haori",
  "version": "0.1.0",
  "description": "A lightweight HTML-first UI engine powered by declarative data bindings and expressions.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dev:demo": "vite --config demo/vite.config.ts",
    "build:demo": "vite build --config demo/vite.config.ts",
    "preview:demo": "vite preview --config demo/vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "compile": "tsc",
    "clean": "rm -rf dist",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meibinlab/haori-js.git"
  },
  "keywords": [
    "html",
    "template",
    "binding",
    "ui-engine",
    "no-javascript",
    "dom",
    "declarative",
    "frontend"
  ],
  "author": "meibinlab",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/haori.js"
    }
  },
  "main": "dist/haori.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/meibinlab/haori-js/issues"
  },
  "homepage": "https://github.com/meibinlab/haori-js#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.7.5",
    "eslint": "^9.31.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
